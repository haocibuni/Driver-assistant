/* 弹出层 */
.pop-up{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 999999; 
  display: flex;
  flex-direction: column; 
  align-items: center;
  justify-content: center;
}
.pop-up-container{
  top:50px;
  width: 600rpx;
  background-color: #fff;
  border-radius: 8rpx;
  color: #666;
  font-size: 35rpx;
}

.top-title {
  background-color:#03bbd5;
  color: white;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}

